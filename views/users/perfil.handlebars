<link rel="stylesheet" href="/css/perfilUser.css">

<div id="msgs"></div>



<div class="container page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-xl-6 col-md-12">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25">
                                    <img src="{{user.imgPerfil}}" class="img-radius rounded-circle"
                                        alt="User-Profile-Image">
                                </div>
                                <h6 class="f-w-600">{{user.usuario}}</h6>
                                <p>{{user.genero}}</p>
                                <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h6 class="text-muted m-b-20 p-b-5 b-b-default f-w-600">Editar informações</h6>
                                <div class="row">
                                    <form action="/perfil" method="post">
                                        <div class="col-sm-6">
                                            <p class="text-muted m-b-10 f-w-600">Nome:</p>
                                            <h6 type="text" class="text-muted f-w-400" name="username"
                                                >{{user.usuario}}</h6>
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="text-muted m-b-10 f-w-600">Gênero</p>
                                            {{#if male}}
                                            <select name="gender" id="generos" class="form-select text-dark">
                                                <option class="text-dark f-w-400" selected value="{{user.genero}}">
                                                    {{user.genero}}</option>
                                                <option class="text-dark f-w-400" value="Feminino">Feminino</option>
                                                <option class="text-dark f-w-400" value="Nao-binario">Não-binario
                                                </option>
                                            </select>
                                            {{/if}}

                                            {{#if female}}
                                            <select name="gender" id="generos" class="form-select text-dark">
                                                <option class="text-dark f-w-400" selected value="{{user.genero}}">
                                                    {{user.genero}}</option>
                                                <option class="text-dark f-w-400" value="Masculino">Masculino</option>
                                                <option class="text-dark f-w-400" value="Nao-binario">Não-binario
                                                </option>
                                            </select>
                                            {{/if}}

                                            {{#if noBinary}}
                                            <select name="gender" id="generos" class="form-select text-dark">
                                                <option class="text-dark f-w-400" selected value="{{user.genero}}">
                                                    {{user.genero}}</option>
                                                <option class="text-dark f-w-400" value="Feminino">Feminino</option>
                                                <option class="text-dark f-w-400" value="Masculino">Masculino</option>
                                            </select>
                                            {{/if}}

                                        <input type="hidden" name="pickAnteriorGender" value="{{user.genero}}">

                                        </div>
                                </div>
                                <h6 class="text-muted m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Mudar imagem de perfil
                                </h6>
                                <div class="row">
                                    <div class="col-sm-6 photos">


                                        <h4 class="container badge text-dark tituloAnimal">| Dogs |</h4>

                                        <div class="PhotoSelect">
                                            <input type="radio" name="imgPerfil" id="imgPerfil1"
                                                value="img/usersPhotos/dog1.png">
                                            <img src="img/usersPhotos/dog1.png" class="imgP" height="70"
                                                alt="dog photo #1">
                                        </div>

                                        <div class="PhotoSelect">
                                            <input type="radio" name="imgPerfil" id="imgPerfil2"
                                                value="img/usersPhotos/dog2.png">
                                            <img src="img/usersPhotos/dog2.png" class="imgP" height="70"
                                                alt="dog photo #2">
                                        </div>

                                        <div class="PhotoSelect">
                                            <input type="radio" name="imgPerfil" id="imgPerfil3"
                                                value="img/usersPhotos/dog3.png">
                                            <img src="img/usersPhotos/dog3.png" class="imgP" height="70"
                                                alt="dog photo #3">
                                        </div>

                                        <div class="PhotoSelect">
                                            <input type="radio" name="imgPerfil" id="imgPerfil4"
                                                value="img/usersPhotos/dog4.png">
                                            <img src="img/usersPhotos/dog4.png" class="imgP" height="70"
                                                alt="dog photo #4">
                                        </div>

                                        <h4 class="container badge text-dark tituloAnimal">| Anime |</h4>

                                        <div class="PhotoSelect">
                                            <input type="radio" name="imgPerfil" id="imgPerfil-animeTanjiro"
                                                value="img/usersPhotos/anime-tanjiro.png">
                                            <img src="img/usersPhotos/anime-tanjiro.png" class="imgP rounded-circle"
                                                height="70" alt="dog photo #tanjiro">
                                        </div>

                                        <div class="PhotoSelect">
                                            <input type="radio" name="imgPerfil" id="imgPerfil-animeMikasa"
                                                value="img/usersPhotos/anime-mikasa.png">
                                            <img src="img/usersPhotos/anime-mikasa.png" class="imgP rounded-circle"
                                                height="70" alt="anime photo #mikasa">
                                        </div>

                                        <div class="PhotoSelect">
                                            <input type="radio" name="imgPerfil" id="imgPerfil-animeAnya"
                                                value="img/usersPhotos/anime-anya.png">
                                            <img src="img/usersPhotos/anime-anya.png" class="imgP rounded-circle"
                                                height="70" alt="anime photo #anya">
                                        </div>


                                        
                                        <div class="PhotoSelect my-5">
                                            <h4 class="container badge text-dark tituloAnimal mt-3">| Escolha |</h4>
                                            <label for="submit" class="text-dark">Cole o link da imagem aqui.</label>
                                            <input type="url" class="text-dark form-control" name="img_submit" id="imgPerfil-submit">
                                            <ul>
                                                <li class="text-dark">Só é aceita fotos em ciculos.</li>
                                                <li class="text-dark">Não será aceita fotos 18+</li>
                                                <li class="text-dark">Sua imagem pode demorar para ser aceita.</li>
                                            </ul>
                                        </div>


                                        <div class="col-sm-6 div-btn-update">
                                            <button
                                                class="custom-btn btn-register btn-updateUser"><span>Atualizar</span></button>
                                        </div>
                                    </div>
                                    </form>
                                </div>
                            </div>
                            <ul class="social-link list-unstyled m-t-40 m-b-10">
                                <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title=""
                                        data-original-title="facebook" data-abc="true"><i
                                            class="mdi mdi-facebook feather icon-facebook facebook"
                                            aria-hidden="true"></i></a></li>
                                <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title=""
                                        data-original-title="twitter" data-abc="true"><i
                                            class="mdi mdi-twitter feather icon-twitter twitter"
                                            aria-hidden="true"></i></a></li>
                                <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title=""
                                        data-original-title="instagram" data-abc="true"><i
                                            class="mdi mdi-instagram feather icon-instagram instagram"
                                            aria-hidden="true"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>