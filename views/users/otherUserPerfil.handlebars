<link rel="stylesheet" href="/css/perfilUser.css">

<div id="msgs"></div>

{{#if userFound}}

<div class="container page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-xl-6 col-md-12">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25">
                                    <img src="{{userFound.imgPerfil}}" class="img-radius rounded-circle"
                                        alt="User-Profile-Image">
                                </div>
                                <h6 class="f-w-600">{{userFound.usuario}}</h6>
                                <p>{{userFound.genero}}</p>
                                <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h6 class="text-muted m-b-20 p-b-5 b-b-default f-w-600">Informações</h6>
                                <div class="row">

                                    <div class="col-sm-6">
                                        <p class="text-muted m-b-10 f-w-600">Nome:</p>
                                        <h6 class="text-muted f-w-400" name="username">{{userFound.usuario}}</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="text-muted m-b-10 f-w-600">Gênero</p>
                                        <h6 class="text-muted f-w-400" name="username">{{userFound.genero}}</h6>

                                    </div>
                                </div>

                                <div class="row">

                                    <div class="col-sm-6">
                                        <p class="text-muted m-b-10 f-w-600">Data de criação da conta:</p>
                                        <h6 class="text-muted f-w-400" name="d-create">
                                            {{userFound.data_de_criacao_formatada}}</h6>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{else}}

<div style="
  -webkit-touch-callout: none;
   -webkit-user-select: none;
   -khtml-user-select: none;
   -moz-user-select: none;
   -ms-user-select: none;
   user-select: none;
  position: absolute;
  display: block;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;">

    <h3>Usuário inexistente.</h3>
    <p class="text-danger">Tente novamente</p>
    <img class="my-3 rounded-circle" src="https://media4.giphy.com/media/7zJgqvSbjBH2M/200.gif" alt="Oceano">

</div>

{{/if}}