<section class="container mySection bg-dark w-50 p-4 mt-5 user-select-none">
    <h3 class="text-center display-4">Registro</h3>
    <img class="rounded mx-auto d-block" src="img/formRL/squirrel.gif" alt="" height="65">
    <form class="formRL" action="/register" method="post">
        <label for="username">Usuário:</label>
        <br>
        <input type="text" name="username" id="username" placeholder="Digite o usuário." required>
        <br>
        <label for="passwordL">Senha:</label>
        <br>
        <input type="password" name="password" id="password" placeholder="Digite a senha." required>
        <br>
        <label for="passwordL">Confirme:</label>
        <br>
        <input type="password" name="password2" id="password2" placeholder="Repita a senha." required>
        <br>
        <div class="my-3">
            <input type="radio" name="genderOp" value="Feminino">
            <label for="mulherOp" class="labelRadio">Feminino</label>
            <br>
            <input type="radio" name="genderOp" value="Masculino">
            <label for="homemOp" class="labelRadio">Masculino</label>
            <br>
            <input type="radio" name="genderOp" value="Nao-binario">
            <label for="No-binaryOp" class="labelRadio">Não-binario</label>

        </div>

        <div id="PhotoSelectSection">


            <label for="imgUser">Foto de perfil</label>
            <br>
            <div class="PhotoSelect">
                <input type="radio" name="imgPerfil" id="imgPerfil1" value="img\usersPhotos\dog1.png">
                <img src="img\usersPhotos\dog1.png" class="imgP" height="70" alt="dog photo #1">
            </div>

            <div class="PhotoSelect">
                <input type="radio" name="imgPerfil" id="imgPerfil2" value="img\usersPhotos\dog2.png">
                <img src="img\usersPhotos\dog2.png" class="imgP" height="70" alt="dog photo #2">
            </div>

            <div class="PhotoSelect">
                <input type="radio" name="imgPerfil" id="imgPerfil3" value="img\usersPhotos\dog3.png">
                <img src="img\usersPhotos\dog3.png" class="imgP" height="70" alt="dog photo #3">
            </div>

            <div class="PhotoSelect">
                <input type="radio" name="imgPerfil" id="imgPerfil4" value="img\usersPhotos\dog4.png">
                <img src="img\usersPhotos\dog4.png" class="imgP" height="70" alt="dog photo #4">
            </div>


        </div>

        <hr class="my-4">
        <button class="custom-btn btn-register"><span>Registrar</span></button>
        
    </form>

    <button class="custom-btn btn-center"><a href="/login"><span> Já tem conta? <br> Faça login</span></a></button>

</section>


{{/if}}


