{{#if success_msg}}
<div class="d-flex flex-row-reverse" id="liveAlertPlaceholder">
    <div class="alert alert-dismissible alert-dark w-25 myBgDark" role="alert">
        <span>{{success_msg}}</span>
        <button type="button" class="btn-close h-5 mt-1 mx-3" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
</div>

{{/if}}

{{#if err_msg}}
<div class="d-flex flex-row-reverse" id="liveAlertPlaceholder">
    <div class="alert alert-dismissible alert-dark w-25 myBgDark" role="alert">
        <span>{{err_msg}}</span>
        <button type="button" class="btn-close h-5 mt-1 mx-3" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
</div>
{{/if}}